@model IEnumerable<Task2.Entities.Player>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Players</title>
    <link rel="stylesheet" href="css/allPlayersPageStyle.css" />
</head>
<body>
    <h4 id="titleTag">All Player</h4>
    <hr />
    <div id="allPlayer" style="width: 75vh !important; ">
        @foreach (var player in Model)
        {
            <div id="playerBox">
                <img src="~/images/@(player.URL)"/>
                <div id="playerInfoPanel">
                    <p><strong>ID: </strong>@player.ID</p>
                    <p><strong>Name: </strong>@player.Name</p>
                    <p><strong>Surname: </strong>@player.Surname</p>
                    <p><strong>Age: </strong>@player.Age</p>
                </div>
            </div>
        }
    </div>
<a asp-action="AddNewPlayer" asp-controller="Player" style="width: 30%;height: 50px; text-decoration: none;background-color: dodgerBlue;color: white;font-size: 0.9em;border: 0;padding: 5px;margin-left: 42.5%;margin-top: 10px;cursor: pointer;border-radius: 20px;transition: 1s;">Go Register</a>
</body>
</html>